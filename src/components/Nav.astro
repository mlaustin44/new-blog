---
import ThemeIcon from './ThemeIcon.astro';

const currentPath = Astro.url.pathname;

const links = [
    { href: '/', label: 'Blog' },
    { href: '/about', label: 'About' },
    { href: '/projects', label: 'Projects' },
];
---

<nav>
    <div class="nav-brand">
        <a href="/">Matthew Austin</a>
    </div>
    <div class="nav-links">
        {links.map(link => (
            <a
                href={link.href}
                class={currentPath === link.href ? 'active' : ''}
                aria-current={currentPath === link.href ? 'page' : undefined }
            >
                {link.label}
            </a>
        ))}
        <ThemeIcon />
    </div>
</nav>

<style>
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 0;
    }

    .nav-brand a {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-weight: 700;
        font-size: 1.25rem;
        color: var(--text);
        letter-spacing: -0.02em;
    }

    .nav-brand a:hover {
        text-decoration: none;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
    }

    .nav-links a {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        color: var(--text-light);
        font-size: 0.95rem;
        font-weight: 500;
        transition: color 0.15s ease;
    }

    .nav-links a:hover {
        color: var(--text);
        text-decoration: none;
    }

    .nav-links .active {
        color: var(--text);
    }

    @media (max-width: 640px) {
        nav {
            flex-direction: column;
            gap: 1rem;
        }

        .nav-links {
            gap: 1.5rem;
        }
    }
</style>